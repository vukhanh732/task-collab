{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "./built",
    "rootDir": "./",
    "types": ["jest", "node", "@types/aws-lambda"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "built",
    "cdk.out",
    "coverage"
  ]
}